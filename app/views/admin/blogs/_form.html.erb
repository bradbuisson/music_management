<%= form_for([:admin, @blog], remote: true) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.text_area :content, rows: 8 %>

    <%= f.label :tag_names, "Tags" %>
    <%= f.text_field :tag_names %>

    <%= check_box(:blog, :published) %>

  <%= f.submit "Publish Blog", class: "btn btn-success" %>
<% end %>
