<li class="blogs" id="blog_<%= blog.id %>">

  <h2 class="bio title">
    <%= link_to blog.title, blog %>
    <%= render partial: 'admin/blogs/actions', object: blog, as: :blog %>
  </h2>

    <h2 class="bio title" style="margin-top: -15px;">
      <span class="timestamp" style="margin-top:0;"><%= blog.timestamp %></span>
    </h2>

  <div class="format">
    <% unless action_name == "show" %>
      <%= auto_link truncate(blog.content, length: 420) %>
      <%= link_to "read more", admin_blog_path(blog), remote: true %>
    <% else %>
    <%= auto_link(blog.content, html: { target: '_blank' }) do |content|
          truncate(content, length: 30) end %>
    <% end %>
  </div>

  <div class="well-footer blog-tags">
    <% if blog.tags.any? %>
      <ul class="bio share-actions" style="padding-bottom: 15px;">
        <% blog.tags.each do |tag| %>
          <li>
            <i class="icon-tag"></i> <%= tag.name %> (<%= tag.blogs.count %>)
          </li>
        <% end %>
      </ul>
    <% end %>
  </div>
</li>
