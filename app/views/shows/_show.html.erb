<tr>
  <td><%= show.date %></td>
  <td><%= show.time %></td>
  <td><%= show.venue %></td>
  <td><%= auto_link(show.address) %></td>
  <td class="price"><%= show.price_for_show %></td>
  <td>
    <% if signed_in? %>
      <%= render( partial: ('actions'), locals: { show: show } ) %>
    <% end %>
  </td>
</tr>
