<%= form_for(@show) do |f| %>

  <%= f.label :date %>
  <%= f.text_field :date %>

  <%= f.label :time %>
  <%= f.text_field :time %>

  <%= f.label :venue %>
  <%= f.text_field :venue %>

  <%= f.label :address %>
  <%= f.text_area :address, rows: 3 %>

  <%= f.label :price, "Price (for free shows, leave blank.)" %>
  <%= f.text_field :price %>

  <%= f.submit "Post Show", class: "btn btn-primary" %>

<% end %>
