    <i class="icon-pencil"> </i>
  </a></li>

  <li><a href="<%= show_path(show) %>" data-method="delete" 
      data-confirm="Are you sure?" title="Delete
      <%= show.venue %> on <%= show.date %> at <%= show.time %>">
    <i class="icon-remove"> </i>
  </a></li>

