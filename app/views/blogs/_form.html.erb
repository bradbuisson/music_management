<%= form_for(@blog) do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.text_area :content, rows: 8, placeholder: "<p> Put each new paragraph inside these tags to be indented. </p> <p> This is a second paragraph, etc. </p>" %>

  <%= f.label :tag_names, "Tags" %>
  <%= f.text_field :tag_names %>

  <%= check_box(:blog, :published) %>

  <%= f.submit "Publish Blog", class: "btn btn-success" %>
<% end %>
