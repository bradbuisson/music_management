<div id="<%= blog.id %>" class="well-body well-inner">

  <h2 class="bio title"> 
    <%= link_to blog.title, blog %>
    <span class="timestamp">
      <%= blog.timestamp %>
    </span>
  </h2>

  <div class="format">
    <% unless identified?(blog) %>
      <%= auto_link(truncate(blog.content, length: 500)) %>
      <%= link_to "read more", blog, style: "font-size: 13px;" %>
    <% else %>
      <%= auto_link(blog.content, html: { target: '_blank' }) do |content|
          truncate(content, length: 30) end %>
    <% end %>
  </div>

  <% if blog.tags.any? %>
    <span class="bio">
      <% blog.tags.each do |tag| %>
        <i class="icon-tag"></i> <%= link_to tag.name, tag %>
      <% end %>
    </span>
  <% end %>

  <% if signed_in? %>
    <%= render( partial: ('blogs/actions'), locals: { blog: blog } ) %>
  <% end %>

</div>
